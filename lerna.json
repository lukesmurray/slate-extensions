{
  "version": "0.0.0",
  "registry": "https://registry.npmjs.org/",
  "publishConfig": {
    "access": "public"
  },
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "command": {
    "version": {
      "allowBranch": ["master"],
      "message": "chore(release): publish %s",
      "conventional-commits": true,
      "create-release": "github",
      "force-publish": true,
      "sign-git-tag": true,
      "sign-git-commit": true
    }
  }
}
